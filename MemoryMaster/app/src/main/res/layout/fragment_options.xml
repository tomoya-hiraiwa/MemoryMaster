<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.OptionsFragment">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textAlignment="center"
        android:textSize="24sp" />
   <TextView
       android:layout_marginTop="30dp"
       android:textSize="20sp"
       android:text="Export site data"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/export_button"
        android:text="Export"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/delete_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/caution"
            android:text="Caution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:text="Delete Site data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/delete_site_button"
            android:text="Delete"
            android:backgroundTint="@color/caution"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Delete Picture data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/delete_picture_button"
            android:text="Delete"
            android:backgroundTint="@color/caution"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>